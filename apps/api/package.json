{
  "name": "@amauta/api",
  "version": "0.1.0",
  "private": true,
  "description": "Amauta - Backend API REST",
  "scripts": {
    "dev": "node --watch -r dotenv/config dist/main.js",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "tsc && node --watch -r dotenv/config dist/main.js",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts --max-warnings 0",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:reset": "prisma migrate reset",
    "prisma:format": "prisma format",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull"
  },
  "dependencies": {
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@nestjs/common": "^11.1.10",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.10",
    "@nestjs/platform-fastify": "^11.1.10",
    "@prisma/client": "^6.19.1",
    "bcrypt": "^6.0.0",
    "jose": "^6.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.11",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "prisma": "^6.19.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
